<Window x:Class="Mod_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod_10"
        mc:Ignorable="d"
        Title="TelegramBot" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="messeg"
                 HorizontalAlignment="Left"
                 Height="46" Margin="205,365,0,0"
                 TextWrapping="Wrap"
                 Text="TextBox"
                 VerticalAlignment="Top"
                 Width="499"/>
        <Button x:Name="ButtonMessegePush"
                Content="Massege"
                HorizontalAlignment="Left"
                Margin="709,388,0,0"
                VerticalAlignment="Top"
                Width="75" Click="ButtonMessegePush_Click" Height="22"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="Чаты"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Height="21"
                   Width="190" FontWeight="Bold"/>
        <ListBox x:Name="logList"
            HorizontalAlignment="Left"
                 Height="374"
                 Margin="10,36,0,0"
                 VerticalAlignment="Top" Width="190">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black"
                            Margin="5"
                            BorderThickness="1"
                            CornerRadius="10">
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding Name}" Margin="0" FontSize="15"/>
                            <TextBlock Text="{Binding Text}" Margin="0" FontSize="15"/>
                            <TextBlock Text="{Binding Date}" Margin="0" FontSize="15"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListView HorizontalAlignment="Left" Height="324" Margin="205,36,0,0" VerticalAlignment="Top" Width="579">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
